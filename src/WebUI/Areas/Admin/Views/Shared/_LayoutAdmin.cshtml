@using StackExchange.Profiling
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <!-- CSS -->
    <link href="@Url.Content("~/Areas/Admin/Content/css/transdmin.css")" rel="stylesheet" type="text/css" media="screen" />
    <!--[if IE 6]><link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Areas/Admin/Content/css/ie6.css")" /><![endif]-->
    <!--[if IE 7]><link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Areas/Admin/Content/css/ie7.css")" /><![endif]-->
    <!-- JavaScripts-->
    <script type="text/javascript" src="@Url.Content("~/Areas/Admin/Content/js/jquery-1.4.4.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/Admin/Content/js/jNice.js")"></script>
    @RenderSection("Scripts", false)
</head>
<body>
    <div id="wrapper">
        <!-- h1 tag stays for the logo, you can use the a tag for linking the index page -->
        <h1>
            <a href="#"><span>Transdmin Light</span></a></h1>
        <!-- You can name the links with lowercase, they will be transformed to uppercase by CSS, we prefered to name them with uppercase to have the same effect with disabled stylesheet -->
        <ul id="mainNav">
            <li><a href="#" class="active">DASHBOARD</a></li>
            <!-- Use the "active" class for the active menu item  -->
            <li><a href="#">ADMINISTRATION</a></li>
            <li><a href="#">DESIGN</a></li>
            <li><a href="#">OPTION</a></li>
            @*<li class="logout"><a href="#">LOGOUT</a></li>*@
            <li class="logout">
                @*@if (ViewData.IsLoggedIn())*@
                @if(Request.IsAuthenticated)
                {
                    <a href="@Url.Action("LogOut", "Auth")">退出</a>
                }else
                {
                    <a href="@Url.Action("Login", "Auth")">登录</a>
                }
            </li>
        </ul>
        <!-- // #end mainNav -->
        <div id="containerHolder">
            <div id="container">
                <div id="sidebar">
                    <ul class="sideNav">
                        <li><a href="#">Exchange</a></li>
                        <li><a href="#" class="active">Print resources</a></li>
                        <li><a href="#">Training &amp; Support</a></li>
                        <li><a href="#">Books</a></li>
                        <li><a href="#">Safari books online</a></li>
                        <li><a href="#">Events</a></li>
                    </ul>
                    <!-- // .sideNav -->
                </div>
                <!-- // #sidebar -->
                <!-- h2 stays for breadcrumbs -->
                <h2><a href="#">后台管理</a> &raquo; <a href="#" class="active">@ViewBag.Title</a></h2>
                @RenderBody()
                <!-- // #main -->
                <div class="clear">
                </div>
            </div>
            <!-- // #container -->
        </div>
        <!-- // #containerHolder -->
        <p id="footer">
            Feel free to use and customize it. <a href="http://www.perspectived.com">Credit is appreciated.</a></p>
    </div>
    <!-- // #wrapper -->
    @MiniProfiler.RenderIncludes()
</body>
</html>
