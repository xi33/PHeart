@model WebUI.Areas.Admin.Controllers.ClassAdminViewModel.EditSndModel
@{
    ViewBag.Title = "修改第二级分类名称";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="main">
    @using (Html.BeginForm("EditSnd", "ClassAdmin", FormMethod.Post, new { @class = "jNice" }))
    {
        <h3>
            修改第二级分类名称 >> @Html.ActionLink("返回上级", "Snd", new { fstId = Model.FstClassId })</h3>
        <fieldset>
            @Html.HiddenFor(model => model.FstClassId)
            @Html.HiddenFor(model => model.SndClassToEdit.Id)
            <p>
                <label>
                    第一级分类名</label>
                @Html.TextBoxFor(_ => _.SndClassToEdit.Name, new { @class = "text-long" })
            </p>
            <input type="submit" value="提交" />
        </fieldset>
    }
</div>
<!-- // #main -->
